<config xmlns = 'http://www.ehcache.org/v3'
        xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
        xmlns:jsr107 = "http://www.ehcache.org/v3/jsr107"
        xsi:schemaLocation ="http://www.ehcache.org/v3/jsr107
https://www.ehcache.org/schema/ehcache-core-3.0.xsd">

    <cache-template name="default">
        <expiry>
            <ttl unit="hours">1</ttl>
        </expiry>
        <heap unit="entries">1000</heap>
    </cache-template>
    <cache alias="Grades" uses-template="default"/>
    <cache alias="GradeById" uses-template="default"/>
    <cache alias="Students" uses-template="default"/>
    <cache alias="StudentById" uses-template="default"/>
    <cache alias="Teachers" uses-template="default"/>
    <cache alias="TeacherById" uses-template="default"/>
    <cache alias="SchoolGroups" uses-template="default"/>
    <cache alias="SchoolGroupById" uses-template="default"/>
    <cache alias="SchoolSubjects" uses-template="default"/>
    <cache alias="SchoolSubjectById" uses-template="default"/>


</config>
